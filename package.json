{
  "name": "italia-pagopa-ts",
  "version": "1.3.1",
  "description": "Client and server for interacting with pagoPA",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "https://github.com/teamdigitale/italia-pagopa-api",
  "author": "Federico Feroldi <federico@teamdigitale.governo.it>",
  "license": "SEE LICENSE IN LICENSE",
  "files": [
    "lib/"
  ],
  "scripts": {
    "build": "npm-run-all -s generate:yaml-from-wsdl generate:ts-from-yaml lint build:tsc",
    "build:tsc": "tsc",
    "clean": "rimraf lib && rm -f src/types/yaml-to-ts/*.ts && rm -f yaml-file/*.yaml",
    "generate:ts-from-yaml": "rm -f src/api/*.ts && rm -f src/types/yaml-to-ts/*.ts && gen-api-models --api-spec ./yaml-file/FespCdService.yaml --out-dir src/types/yaml-to-ts/ --ts-spec-file ./src/api/public_api_FespCdService.ts && gen-api-models --api-spec ./yaml-file/PagamentiTelematiciPspNodoservice.yaml --out-dir src/types/yaml-to-ts/ --ts-spec-file ./src/api/public_api_PagamentiTelematiciPspNodoservice.ts",
    "generate:yaml-from-wsdl": "rm -f yaml-file/*.yaml && node YamlGenerator.js",
    "lint": "tslint --project .",
    "postversion": "git push && git push --tags && rimraf build/temp",
    "prepublish": "npm run build",
    "prettify": "prettier --write './src/**/*.ts'",
    "test": "jest",
    "version": "npm run build && git add -A lib"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.20",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.0.0",
    "@types/node": "^8.9.4",
    "@types/soap": "^0.21.0",
    "danger": "^3.7.15",
    "danger-plugin-digitalcitizenship": "^0.3.1",
    "italia-tslint-rules": "^0.1.1",
    "italia-utils": "^3.11.2",
    "jest": "^23.1.0",
    "npm-run-all": "^4.1.3",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-immutable": "^4.5.4",
    "tslint-plugin-prettier": "^1.3.0",
    "tslint-sonarts": "^1.7.0",
    "typescript": "^2.9.1",
    "typestrict": "0.0.9",
    "wsdl-to-ts": "^0.1.3"
  },
  "dependencies": {
    "apiconnect-wsdl": "^1.5.103",
    "io-ts": "^1.2.0",
    "italia-ts-commons": "^2.5.0",
    "jest-xml-matcher": "^1.1.1",
    "js-yaml": "^3.12.0",
    "soap": "^0.24.0"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
